<layout version="0.1.0">
	<!--add link to the customer panel-->
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="customer">
                <name>custom page</name>
                <!--Customer Block/PakadooController.php-->
                <path>customer/pakadoo/</path>
                <label>Pakadoo</label>
            </action>
        </reference>
    </customer_account>

     <!--Istockphp\Customerpage\controllers\PakadooController.php-->
    <customer_pakadoo_index translate="label">
        <label>Custom Page</label>
            <reference name="head">
                    <action method="setTitle"><title>Custom Page</title></action> <!--Page Title-->
            </reference>
        <!-- Mage_Customer -->
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <!--name in config file / Istockphp\Customerpage\Block\Customer.php-->
            <block type="shipcloud/customer" name="shipcloud" before="-" template="shipcloud/pakadoo_customer_page.phtml"/>
        </reference>
    </customer_pakadoo_index>

	<checkout_cart_index>
	    <reference name="shipcloud_checkout_onepage_link">
			<block type="core/text_list" name="checkout.cart.top_methods" as="top_methods" translate="label">
				<label>Payment Methods Before Checkout Button</label>
				<block type="checkout/onepage_link" name="checkout.cart.methods.onepage.top" template="shipcloud/checkout/onepage/link.phtml" after="-" />
			</block>
			<block type="core/text_list" name="checkout.cart.methods" as="methods" translate="label">
				<label>Payment Methods After Checkout Button</label>
				<block type="checkout/onepage_link" name="checkout.cart.methods.onepage.bottom" template="shipcloud/checkout/onepage/link.phtml"/>
				<!--<block type="checkout/onepage_link" name="checkout.cart.methods.onepage.bottom" template="checkout/onepage/link.phtml"/>-->
			</block>
	    </reference>
		<reference name="content">
			<block type="core/template" name="Pakadoo" as="Pakadoo"  template="shipcloud/checkout/onepage/pakadoo.phtml"  />
		</reference>
  	</checkout_cart_index>

    <checkout_onepage_index translate="label">
        <reference name="checkout.onepage.billing">
          <action method="setTemplate"><template>shipcloud/checkout/onepage/billing.phtml</template></action>
        </reference>
        <reference name="checkout.onepage.shipping">
          <action method="setTemplate"><template>shipcloud/checkout/onepage/shipping.phtml</template></action>
        </reference>
    </checkout_onepage_index>
</layout>
